{
  "plugins": ["import"],
  "extends": ["eslint:recommended", "plugin:import/errors", "prettier"],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "always"],
    "curly": "error",
    "default-case": "error",
    "import/no-duplicates": "error",
    "import/order": [
      "error",
      {
        "newlines-between": "always"
      }
    ],
    "line-comment-position": [
      "error",
      {
        "position": "above"
      }
    ],
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-irregular-whitespace": [
      "error",
      {
        "skipStrings": true,
        "skipTemplates": true
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "after-used",
        "ignoreRestSiblings": true
      }
    ],
    "no-var": "error",
    "prefer-const": "error"
  }
}
