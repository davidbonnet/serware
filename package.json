{
  "name": "serware",
  "version": "0.1.2",
  "description": "Basic server middelware for JavaScript engines.",
  "main": "main.js",
  "module": "main.js",
  "jsnext:main": "main.js",
  "es": "main.js",
  "main-es": "main.js",
  "scripts": {
    "start": "node --require esm demo/server.js",
    "dev": "concurrently -n \"server,  test\" \"npm:dev:server\" \"npm:dev:test\"",
    "dev:server": "node --require esm demo/server.js",
    "dev:test": "ava --watch",
    "test": "npm run eslint && npm run prettier:check && npm run test:unit",
    "test:unit": "c8 --reporter=html --reporter=text --reporter=lcov --include='src/*.js' --all --exclude='src/**/tests/*.js' ava",
    "eslint": "eslint src/",
    "prettier": "prettier --write \"{src,scripts}/**/*.js\"",
    "prettier:check": "prettier --list-different \"{src,scripts}/**/*.js\"",
    "prepush": "npm test",
    "release": "standard-version",
    "deploy": "git push --follow-tags origin master && npm publish"
  },
  "keywords": [
    "server",
    "http",
    "middleware",
    "session",
    "file"
  ],
  "author": "David Bonnet <david@bonnet.cc>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidbonnet/serware.git"
  },
  "dependencies": {
    "cookie": "^0.4.1",
    "lodash": "^4.17.19",
    "mime-types": "^2.1.27"
  },
  "devDependencies": {
    "ava": "^3.10.1",
    "c8": "^7.2.1",
    "chokidar": "^3.4.1",
    "codecov": "^3.7.2",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "esm": "^3.2.25",
    "fast-glob": "3.2.4",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.2"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintConfig": {
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "prettier"
    ],
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 10,
      "sourceType": "module"
    },
    "globals": {
      "__dirname": true,
      "__filename": true,
      "console": true,
      "global": true,
      "import": true,
      "module": true,
      "process": true,
      "require": true,
      "window": true
    },
    "rules": {
      "curly": "error",
      "default-case": "error",
      "import/no-duplicates": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ],
      "line-comment-position": [
        "error",
        {
          "position": "above"
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-irregular-whitespace": [
        "error",
        {
          "skipStrings": true,
          "skipTemplates": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "ignoreRestSiblings": true
        }
      ],
      "no-var": "error",
      "prefer-const": "error"
    }
  },
  "ava": {
    "files": [
      "src/**/tests/*.js"
    ],
    "require": [
      "esm"
    ]
  },
  "esm": "auto"
}
